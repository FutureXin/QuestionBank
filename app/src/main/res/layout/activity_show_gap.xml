<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_color">

    <RelativeLayout
        android:id="@+id/gap_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/splash">

        <android.support.v7.widget.Toolbar
            style="@style/NoSpaceActionBarTheme"
            android:id="@+id/gap_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splash"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" >
            <TextView
                android:layout_width="1dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/darker_gray"
                android:layout_height="24dp"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/show_gap_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_topic"
                android:textColor="@color/text_colors"
                android:textSize="22sp" />

        </android.support.v7.widget.Toolbar>
    </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/gap_relative"
            android:layout_above="@+id/relativeLayout"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/show_gap_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_gap_topic"
                    android:layout_centerHorizontal="true"
                    android:text="@string/text_show_answer"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/show_gap_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_gap_btn"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape2"
                    android:textColor="@color/text_colors"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/show_gap_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_gap_a"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape2"
                    android:textColor="@color/text_colors"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/show_gap_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_gap_b"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape2"
                    android:textColor="@color/text_colors"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/show_gap_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_gap_c"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape2"
                    android:textColor="@color/text_colors"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/show_gap_e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_gap_d"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape2"
                    android:textColor="@color/text_colors"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/gap_detailed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_gap_e"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape1"
                    android:paddingBottom="5dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/text_detailed"
                    android:textColor="@color/text_colors"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/show_gap_detailed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gap_detailed"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape2"
                    android:textColor="@color/text_colors"
                    android:textSize="18sp"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/show_gap_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape2"
                    android:linksClickable="true"
                    android:minLines="3"
                    android:textColor="@color/text_colors"
                    android:textSize="20sp" />
            </RelativeLayout>
        </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/splash"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/show_gap_url_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="@string/text_source"
            android:textColor="@color/text_colors"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry" />

        <ImageButton
            android:contentDescription="@string/text_thumb"
            android:id="@+id/show_gap_praise"
            android:background="@mipmap/praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/show_gap_praise_count"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/show_gap_praise_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
